<%
  const selectedId = locals.selectedStory ? ('' + (selectedStory._id || selectedStory)) : null;
%>

<select name="<%= fieldName %>">
  <option value="0">
    -- Select --
  </option>
  <% stories.forEach(story => { %>
    <% if (selectedId == '' + story._id) { %>
      <option value="<%= story.id %>" selected="selected" story-type="<%= story.type %>">
        <%= story.title %>
      </option>
    <% } else { %>
      <option value="<%= story.id %>" story-type="<%= story.type %>">
        <%= story.title %>
      </option>
    <% } %>
  <% }); %>
</select>
