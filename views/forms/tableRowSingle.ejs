<%
  const attr = locals.params ? (params.attr || params.attrName) : locals.attr;
  const editPath = locals.params ? params.editPath : locals.editPath;
  const originalValue = locals.params ? params.originalValue : locals.originalValue;
  const fieldType = (locals.params ? params.fieldType : locals.fieldType) || 'text';
  const toggle = locals.params ? params.toggle : locals.toggle;
  const preventSharing = locals.preventSharing || false;
  const disableToggleButton = toggle && preventSharing && !originalValue;
%>

<form action="<%= editPath %>" method="POST">
  <tr>
    <td>
      <b><%= attr %></b>
    </td>

    <td>
      <!-- DISPLAY VALUE -->

      <div item="<%= attr %>" class="value-show">

        <!-- date, location -->

        <% if (attr == 'date') { %>
          <%- include('../format/date', { params: {
            date: originalValue,
          }}) %>
        <% } else if (attr == 'location') { %>
          <%- include('../format/location', { params: {
            location: originalValue,
          }}) %>

        <!-- story -->

        <% } else if (attr == 'story') { %>
          <div item="<%= attr %>" class="value-show">
            <% if (originalValue) { %>
              <%- include('../partials/linkToStory', { story: originalValue }) %>
            <% } else { %>
              none
            <% } %>
          </div>

        <!-- source -->

        <% } else if (attr == 'source') { %>
          <div item="<%= attr %>" class="value-show">
            <% if (originalValue) { %>
              <%- include('../partials/linkToSource', { source: originalValue }) %>
            <% } else { %>
              none
            <% } %>
          </div>

        <!-- textarea -->

        <% } else if (fieldType == 'textarea') { %>
          <%
            let valueList = [];
            if (originalValue && originalValue != '') {
              valueList = originalValue.split('\n');
            }
          %>
          <ul class="bullet-list">
            <% valueList.forEach(str => { %>
              <li><%= str %></li>
            <% }); %>
          </ul>

        <!-- sharing -->

        <% } else if (attr == 'sharing' || attr == 'shareLevel') { %>
          <%
            let imageValue = originalValue === 2 || originalValue === true;
            let shareText = '';

            if (originalValue === 2) {
              shareText = 'everything (2)';
            } else if (originalValue === 1) {
              shareText = 'restricted (1)';
            } else if (originalValue === 0) {
              shareText = 'none (0)';
            } else if (originalValue === true) {
              shareText = 'yes';
            } else {
              shareText = 'no';
            }
          %>
          <img class="checkmark-inline" src="/images/check-<%= imageValue %>.png">
          <%= shareText %>

          <% if (preventSharing) { %>
            <% if (originalValue) { %>
              <span style="color: red">WARNING: story is not shared</span>
            <% } else { %>
              (story is not shared)
            <% } %>
          <% } %>

        <!-- everything else -->

        <% } else { %>
          <%= originalValue %>
        <% } %>
      </div>

      <!-- EDITABLE FIELD -->

      <% if (attr == 'date') { %>
        <div item="<%= attr %>" class="value-edit">
          <%- include('../forms/date', { date: originalValue }) %>
        </div>
      <% } else if (attr == 'location') { %>
        <div item="<%= attr %>" class="value-edit">
          <%- include('../forms/location', { location: originalValue }) %>
        </div>
      <% } else if (attr == 'story') { %>
        <div item="<%= attr %>" class="value-edit">
          <%- include('./storyDropdown', {
            fieldName: attr,
            selectedStory: originalValue,
          }) %>
        </div>
      <% } else if (fieldType == 'textarea') { %>
        <textarea item="<%= attr %>" class="value-edit" name="<%= attr %>"><%= originalValue %></textarea>
      <% } else { %>
        <input item="<%= attr %>" class="value-edit" type="text" value="<%= originalValue %>" name="<%= attr %>">
      <% } %>

      <!-- HIDDEN ORIGINAL VALUE -->

      <input item="<%= attr %>" class="value-original" type="hidden" value="<%= originalValue %>">
    </td>
    <td>
      <!-- SUBMIT EDIT -->

      <input type="hidden" value="PUT" name="_method">
      <button item="<%= attr %>" class="button-submit" type="submit">save</button>

      <!-- TOGGLE SHOW/EDIT -->

      <% if (toggle) { %>
        <button item="<%= attr %>" class="link-start" type="submit"
          <%= disableToggleButton ? " disabled" : "" %>>toggle</button>
      <% } else { %>
        <a item="<%= attr %>" class="link-start" onclick="startEdit('<%= attr %>')">edit</a>
      <% } %>
    </td>
    <td>
      <a item="<%= attr %>" class="link-cancel" onclick="cancelEdit()">cancel</a>
    </td>
  </tr>
</form>
