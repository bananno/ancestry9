<style>
  textarea {
    height: 100px;
    width: 300px;
    padding: 5px;
  }

  input {
    width: 300px;
    padding: 5px;
    margin-bottom: 20px;
  }

  div.to-do-list-item {
    border-top: 1px solid gray;
    padding: 10px 0;
  }

  p {
    margin: 10px 0;
  }

  a {
    word-break: break-word;
  }
</style>

<h1>Checklist</h1>

<form action="/checklist/new" method="post">
  <textarea name="text" placeholder="add item"></textarea>
  <button>create new item</button>
</form>

<input placeholder="search" id="to-do-list-searchbox">

<% notations.reverse().forEach(notation => { %>
  <div class="to-do-list-item">
    <p>
      <%- include('../partials/linkToNotation', {notation, text: 'notation'}) %>
    </p>
    <% notation.text.split('\n').forEach(text => { %>
      <p>
        <% if (text.match('http')) { %>
          <a href="<%= text %>" target="_blank"><%= text %></a>
        <% } else { %>
          <%= text %>
        <% } %>
      </p>
    <% }); %>
  </div>
<% }); %>

<script>
  createQuickFilter({
    input: '#to-do-list-searchbox',
    items: '.to-do-list-item',
    startFocus: true,
    getItemText: $item => $item.text(),
  });
</script>
