<%
    const previousSourceType = '';
%>

<h1>
    <%= rootSource.group %>
</h1>

<% if (rootSource.type == 'grave') { %>
    <p>
        <%- include('../format/location', { params: {
            location: rootSource.location,
        }}) %>
    </p>
<% } else { %>
    <p>
        (<%= rootSource.type %> group)
    </p>
    <div class="filter-buttons" filter="source-details">
        <div class="filter-button active" filter-set="content">
            content
        </div>
    </div>
<% }%>

<% if (groupMain) { %>
    <h2>Group Main</h2>

    <%- include('./sourceBlock', {
        source: groupMain,
        includePeople: true,
    }); %>

    <h2>Sources in Group</h2>
<% } %>

<% sources.forEach(source => { %>
    <%- include('./sourceBlock', {
        source: source,
        includePeople: true,
    }); %>
<% }); %>

<script>
    createToggleFilter('source-details');
</script>
